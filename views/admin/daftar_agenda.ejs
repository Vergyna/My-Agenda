<div class="row justify-content-center mt-4">
    <h2>Daftar Agenda</h2>
</div>
<hr>
<div class="row justify-content-center mt-4">
    <div class="col">
    </div>
    <div class="col">
      <input class="form-control me-2" id="myInput" type="search" onkeyup="myFunction()" placeholder="Search" aria-label="Search">
    </div>
</div>
<div class="row justify-content-center mt-4">
  <table class="table table-striped table-hover" id="myTable">
    <thead class="table">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama Kegiatan</th>
            <th scope="col">Tanggal</th>
            <th scope="col">Keterangan</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
            <% data.forEach((agenda, i) => { %>
            <tr>
              <th scope="row"><%= i + 1 %> </th>
              <td>
                <a href="/admin/<%= agenda.agendaId %>">
                  <%= agenda.nama_kegiatan %>
                </a>
              </td>
              <td><%= agenda.tanggal %> </td>
              <td><%= agenda.keterangan %> </td>
              <td>
                <% if (agenda.selesai) { %>
                 <h5 class="text-success">Selesai</h5>
                <% } else { %>
                  <div class="row">
                    <a href="/admin/edit_agenda/<%= agenda.agendaId %>" class="btn btn-primary"><i class="bi bi-pencil-fill"></i></a>
                    <form method="POST" action="/agenda/selesai">
                        <button type="submit" class="btn btn-success" onclick="return confirm('Are You Sure?')"><i class="bi bi-check-lg"></i></button>
                        <input type="hidden" id="agendaId" name="agendaId" value="<%= agenda.agendaId %>">
                    </form>
                    <form method="POST" action="/agenda?_method=DELETE">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are You Sure?')"><i class="bi bi-trash-fill"></i></button>
                        <input type="hidden" id="agendaId" name="agendaId" value="<%= agenda.agendaId %>">
                    </form>
                  </div>
                <% } %> 
              </td>
            </tr>
            <% }) %>
          </tbody>
      </table>
</div>