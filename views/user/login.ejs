<div class="container">
  <div class="row"><br><br><br><br></div>
  <div class="row mt-5 mb-5 justify-content-center" style="opacity: 0.9;">
            <div class="col-6 mt-5">
              <h4 class="text-center text-secondary">LOGIN</h4>
                <form method="POST" action="/user/login">
                    <div class="mb-3">
                      <label for="email" class="form-label">Email address</label>
                      <div class="row">
                          <input type="text" class="form-control col" placeholder="Email" id="email" name="email" aria-describedby="emailHelp" required>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <div class="row">
                          <input type="password" class="form-control" placeholder="min 8 characters" id="password" name="password">
                      </div>
                    </div>
                    <div class="d-grid text-center">
                    <button type="submit" class="btn btn-primary mb-3">Login</button>
                  </div>
                    <p class="mb-5">Don't have account? <a href="/register">Sign up!</a>. Or are you an admin? <a href="/admin/login">Click here!</a></p>

                  </form>
            </div>
    </div>
</div>
